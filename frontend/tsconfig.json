{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
, "../frontend/src/main.ts", "../frontend/src/vite-env.d.ts"    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}